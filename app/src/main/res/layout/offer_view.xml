<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/linearLayout">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>

        <LinearLayout
                android:layout_marginTop="?attr/actionBarSize"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                    android:textSize="30sp"
                    android:text="Choose Airtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
            />
            <Spinner
                    android:id="@+id/spinnerBundleSource"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12sp"/>
            <Spinner
                    android:id="@+id/spinnerBundleOption"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp" android:layout_marginTop="12sp"/>
            <Spinner
                    android:id="@+id/spinnerBundleFrequency"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12sp"/>
            <EditText
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:hint="enter credit amount..."
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bundlePrice"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12sp"/>
            <Button
                    android:text="Buy"
                    android:onClick="buyAirtime"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
            />
        </LinearLayout>

</RelativeLayout>