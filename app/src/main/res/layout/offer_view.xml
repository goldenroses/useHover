<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/linearLayout">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:textSize="30sp"

                android:text="Choose Airtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/spinnerBundleOption"/>
        <Spinner
                android:id="@+id/spinnerBundleOption"
                android:layout_width="149dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/spinnerBundleFrequency"/>
        <Spinner
                android:id="@+id/spinnerBundleFrequency"
                android:layout_width="149dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="160dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/bundlePrice"/>
        <Spinner
                android:id="@+id/spinnerBundleSource"
                android:layout_width="149dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/spinnerBundleFrequency"
        />
        <EditText
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:hint="enter credit amount..."
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bundlePrice"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center" android:layout_marginTop="236dp"
                app:layout_constraintHorizontal_bias="0.527" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/button"/>
        <Button
                android:text="Buy"
                android:textColor="@color/hsdk_trans_white"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="162dp" android:layout_marginBottom="293dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>